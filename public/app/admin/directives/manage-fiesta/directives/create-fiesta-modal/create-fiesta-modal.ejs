
<div class="modal centered-modal fade" id="createFiesta" tabindex="-1" role="dialog" aria-labelledby="createFiestaLabel" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog centered-modal" role="document">
    <div class="modal-content" ng-controller="CreateFiestaModalCtrl">
      <!-- Modal Header -->
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"ng-hide="successfulCreation"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="createFiestaLabel">Create a Fiesta</h4>
      </div>

      <!-- Modal Body -->
      <div class="modal-body create-modal-body">

        <!-- Form Section -->
        <div class="form-horizontal">
          <div class="form-group create-validation fiestaTitle">
            <label for="fiestaTitle" class="col-sm-1 control-label">Title</label>
            <div class="col-sm-11">
              <input ng-model="title" id="fiestaTitle" type="text" class="form-control" aria-describedby="sizing-addon1"/>
            </div>
          </div>
          <div class="form-group create-validation startDate">
            <label for="startDate" class="col-sm-3 control-label">Start Date</label>
            <div class="col-sm-9">
              <input ng-model="startDate" id="startDate" type="date" class="form-control" aria-describedby="sizing-addon1"/>
            </div>
          </div>
          <div class="form-group create-validation endDate">
            <label for="endDate" class="col-sm-3 control-label">End Date</label>
            <div class="col-sm-9">
              <input ng-model="endDate" id="endDate" type="date" class="form-control" aria-describedby="sizing-addon1"/>
            </div>
          </div>
        </div>

        <!-- Alert Section -->
        <div uib-alert class="alert alert-danger" id="inputAlert" ng-show="warning != ''">
          <strong> {{ warning }} </strong>
        </div>

        <!-- Loading Section -->
        <uib-progressbar class="fiesta-loading progress-striped active text-center" value="100" type="primary" ng-show="successfulCreation">
          Creating Fiesta
        </uib-progressbar>
      </div>
      <!-- Modal Footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" ng-hide="successfulCreation">Close</button>
        <button type="button" class="btn btn-primary" ng-click="createFiesta()" ng-class="{'disabled': successfulCreation}">Create</button>
      </div>
    </div>
  </div>
</div>
