<div class="modal" id="editMore" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-if="!moreLoading">&times;</button>
        <div class="row">
          <div class="col-md-6 text-left">
            <h4 class="modal-title" id="">
               {{action.charAt(0).toUpperCase() + action.slice(1, action.length)}} a More
            </h4>
          </div>
        </div>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-12">
            <form class="form-horizontal">
              <div class="form-group">
                <label for="title" class="col-sm-1 control-label">Title</label>
                <div class="col-sm-11">
                  <input ng-model="writeup.title" type="text" class="form-control" placeholder="Add title">
                </div>
              </div>
            </form>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <h5 class="text-center">Body</h5>
            <summernote ng-model="writeup.body" config="options"></summernote>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" ladda="moreLoading" data-style="expand-right" data-spinner-size="10" ng-click="(action=='add')?AddMore(writeup):EditMore(writeup)">{{action.charAt(0).toUpperCase() + action.slice(1, action.length)}}</button>
      </div>
    </div>
  </div>
</div>
