<div class="panel panel-default">
  <!-- Panel Title -->
  <div class="panel-heading">
    <div class="row">
      <div class="col-md-3">

        <h3 class="panel-title"></span> Featured Technologies</h3>
      </div>
      <div class="col-md-2 col-md-offset-7">
        <button class="btn btn-xs btn-primary pull-right" type="button" name="button" ng-click="add()" data-toggle="modal" data-target="#editTechnology">
          Add Technology
        </button>
      </div>
    </div>
  </div>

  <!-- Panel Body -->
  <div class="panel-body">

    <div class="" ng-if="technologies.length == 0">
      <li class="list-group-item">
        <div class="no-data-large">
          <span class="glyphicon glyphicon-cd"></span> <br/><br/>
          <span class="lead">Add Technologies in the Fiesta</span>
          <span class="text-muted">
            <p>No technologies featured in fiesta. <a href ng-click="add()" data-toggle="modal" data-target="#editTechnology">Add one</a>?</p>
          </span><br/>
          <br/>
        </div>
      </li>
    </div>
    <div class="container-fluid" ng-if="technologies.length > 0">
      <v-accordion class="vAccordion--default">
        <v-pane ng-repeat="sec in sector | orderBy: 'name'">
          <v-pane-header>
            <span class="glyphicon glyphicon-chevron-right small text-muted"></span>&nbsp;{{sec.name}}
          </v-pane-header>
          <v-pane-content>
            <v-accordion class="vAccordion--inside">
              <v-pane ng-if="tech[comm] && tech[comm].length > 0" ng-repeat="comm in sec.commodities | orderBy: ''" >
                <v-pane-header>
                  &nbsp;{{comm}} <span class="badge">{{tech[comm].length}}</span>
                </v-pane-header>
                <v-pane-content>
                  <ul class="list-group">
                    <li class="list-group-item" ng-repeat="t in tech[comm] | orderBy:'name'">
                      <div class="row">
                        <div class="col-md-10">
                          <a href tooltip-placement="bottom-left" ng-click="focus(t)" uib-tooltip="View" data-toggle="modal" data-target="#viewTechnology">
                            {{t.name}}
                          </a>
                        </div>
                        <div class="col-md-2 text-right">
                          <a href ng-click="edit(t)" data-toggle="modal" data-target="#editTechnology" tooltip-placement="bottom" uib-tooltip="Edit Details">
                            <span class="glyphicon glyphicon-edit"></span>
                          </a>
                          &nbsp;&middot;&nbsp;
                          <a href ng-click="point(t)" data-toggle="modal" data-target="#editImage" tooltip-placement="bottom" uib-tooltip="Change Image">
                            <span class="glyphicon glyphicon-camera"></span>
                          </a>
                          &nbsp;&middot;&nbsp;
                          <a href ng-click="DeleteTechnology(t)" tooltip-placement="bottom" uib-tooltip="Delete">
                            <span class="glyphicon glyphicon-trash"></span>
                          </a>
                        </div>
                      </div>
                    </li>
                  </ul>
                </v-pane-content>
              </v-pane>
            </v-accordion>
          </v-pane-content>
        </v-pane>

      </v-accordion>
    </div>


  </div>
</div>

<view-tech></view-tech>
<edit-tech></edit-tech>
