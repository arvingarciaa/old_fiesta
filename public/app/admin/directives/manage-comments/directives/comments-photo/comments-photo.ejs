<div>
  <br>
  <div ng-repeat="(key, photo) in photo_comments">
    <div class="panel panel-default">
      <div class="panel-heading">
        <span class="bold">
          {{key}}
        </span>
      </div>
      <div class="panel-body">
        <div ng-repeat="(k, val) in photo track by $index" class="row">
          <hr ng-hide="$first">
          <div class="col-md-4 col-lg-4">
            <img class="thumbnail" ng-src="{{photo[k][0].photo.image.path}}" style="width:100%; height:100%; margin: auto;"/>
          </div>
          <div class="col-md-8 col-lg-8">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th class="col-md-2 col-lg-2 col-xs-2 col-sm-2"> Username </th>
                  <th class="col-md-6 col-lg-6 col-xs-6 col-sm-6"> Comment </th>
                  <th class="col-md-2 col-lg-2 col-xs-2 col-sm-2"> Date </th>
                  <th class="text-center col-md-1 col-lg-1 col-xs-1 col-sm-1"> Approve </th>
                  <th class="text-center col-md-1 col-lg-1 col-xs-1 col-sm-1"> Disapprove </th>
                <tr>
              </thead>
              <tbody>
                <tr ng-repeat="value in val | orderBy: '-timestamp'">
                  <td>{{value.username}}</td>
                  <td>{{value.comment}}</td>
                  <td am-time-ago="value.timestamp"></td>
                  <td class="text-center"><span class="glyphicon glyphicon-ok" aria-hidden="true" style="color: green; cursor: pointer;"
                    ng-click="approvePhoto(value)"></span></td>
                  <td class="text-center"><span class="glyphicon glyphicon-remove" aria-hidden="true" style="color: red; cursor: pointer;"
                    ng-click="removePhoto(value)"></span></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
